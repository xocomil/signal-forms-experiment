{
  "compilerOptions": {
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "emitDecoratorMetadata": false,
    "target": "es2022",
    "module": "preserve",
    "paths": {
      "@spartan-ng": [
        "./libs/ui/src/index.ts"
      ],
      "@spartan-ng/date-picker": [
        "./libs/ui/date-picker/src/index.ts"
      ],
      "@spartan-ng/utils": [
        "./libs/ui/utils/src/index.ts"
      ],
      "@spartan-ng/calendar": [
        "./libs/ui/calendar/src/index.ts"
      ],
      "@spartan-ng/icon": [
        "./libs/ui/icon/src/index.ts"
      ],
      "@spartan-ng/popover": [
        "./libs/ui/popover/src/index.ts"
      ],
      "@spartan-ng/button": [
        "./libs/ui/button/src/index.ts"
      ],
      "@spartan-ng/dialog": [
        "./libs/ui/dialog/src/index.ts"
      ],
      "@spartan-ng/dropdown-menu": [
        "./libs/ui/dropdown-menu/src/index.ts"
      ],
      "@spartan-ng/field": [
        "./libs/ui/field/src/index.ts"
      ],
      "@spartan-ng/input": [
        "./libs/ui/input/src/index.ts"
      ],
      "@spartan-ng/label": [
        "./libs/ui/label/src/index.ts"
      ],
      "@spartan-ng/select": [
        "./libs/ui/select/src/index.ts"
      ],
      "@spartan-ng/separator": [
        "./libs/ui/separator/src/index.ts"
      ]
    },
    "isolatedModules": true
  },
  "angularCompilerOptions": {
    "enableI18nLegacyMessageIdFormat": false,
    "strictInjectionParameters": true,
    "strictInputAccessModifiers": true,
    "typeCheckHostBindings": true,
    "strictTemplates": true
  },
  "files": [],
  "include": [],
  "references": [
    {
      "path": "./tsconfig.app.json"
    },
    {
      "path": "./tsconfig.spec.json"
    }
  ],
  "compileOnSave": false,
  "exclude": [
    "node_modules",
    "tmp"
  ]
}
